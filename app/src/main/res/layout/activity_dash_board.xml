<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity"
    android:background="@drawable/dash">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mainland Hotel"
        android:textSize="30sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="57dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="80dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sadini"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="100dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room"
        android:layout_marginLeft="285dp"
        android:layout_marginTop="100dp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/roomNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="785"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="100dp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:textSize="25sp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/resBtn"
        android:layout_alignLeft="@+id/resBtn"
        android:layout_alignTop="@+id/resBtn"
        android:layout_alignEnd="@+id/resBtn"
        android:layout_alignRight="@+id/resBtn"
        android:layout_alignBottom="@+id/resBtn"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        app:srcCompat="@drawable/meal" />

    <Button
        android:id="@+id/resBtn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="RESTURENT"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="10dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/icons"
        />



    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/serviceBtn"
        android:layout_alignLeft="@+id/serviceBtn"
        android:layout_alignTop="@+id/serviceBtn"
        android:layout_alignEnd="@+id/serviceBtn"
        android:layout_alignRight="@+id/serviceBtn"
        android:layout_alignBottom="@+id/serviceBtn"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        app:srcCompat="@drawable/roomservice" />

    <Button
        android:id="@+id/serviceBtn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="ROOM SERVICE"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="10dp"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/icons"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/ActBtn"
        android:layout_alignLeft="@+id/ActBtn"
        android:layout_alignTop="@+id/ActBtn"
        android:layout_alignEnd="@+id/ActBtn"
        android:layout_alignRight="@+id/ActBtn"
        android:layout_alignBottom="@+id/ActBtn"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        app:srcCompat="@drawable/activity" />



    <Button
        android:id="@+id/ActBtn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="ACTIVITIES"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="10dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="220dp"
        android:background="@drawable/icons"
        />


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/spaBtn"
        android:layout_alignLeft="@+id/spaBtn"
        android:layout_alignTop="@+id/spaBtn"
        android:layout_alignEnd="@+id/spaBtn"
        android:layout_alignRight="@+id/spaBtn"
        android:layout_alignBottom="@+id/spaBtn"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        app:srcCompat="@drawable/spa" />
        <Button
            android:id="@+id/spaBtn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="SPA"
            android:gravity="bottom|center_horizontal"
            android:paddingBottom="10dp"
            android:layout_marginTop="450dp"
            android:layout_marginLeft="220dp"
            android:background="@drawable/icons" />




</RelativeLayout>