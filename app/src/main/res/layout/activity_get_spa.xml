<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetActivitiesActivity"
    android:background="@drawable/loginbck">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:text="MianLand Hotel"
        android:textSize="30sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/roomNumberSpa"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:background="@drawable/ecittxt_login"
        android:ems="10"
        android:maxLength="4"
        android:hint="Room Number"
        android:gravity="center"
        android:inputType="number"
        android:text=""
        android:textColor="@android:color/black"
        />
    <EditText
        android:id="@+id/phoneNumSpa"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:background="@drawable/ecittxt_login"
        android:ems="10"
        android:maxLength="10"
        android:hint="Phone Number"
        android:gravity="center"
        android:inputType="number"
        android:text=""
        android:textColor="@android:color/black"
        />

    <EditText
        android:id="@+id/cusNameSpa"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Your Name"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text=""
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:background="@drawable/ecittxt_login"
        />

    <Spinner
        android:id="@+id/spinnerSpa"
        android:layout_width="250dp"
        android:gravity="center"
        android:layout_height="40dp"
        android:layout_marginTop="400dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ecittxt_login"/>


    <Button
        android:id="@+id/confirmBtnSpa"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Confirm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="520dp"
        android:background="@drawable/button"/>

    <Button
        android:id="@+id/viewBtnSpa"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="570dp"
        android:background="@drawable/button"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spa service"
        android:textSize="30dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"/>

    <EditText
        android:id="@+id/timeSpa"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="time"
        android:hint="Time"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:background="@drawable/ecittxt_login"/>

</RelativeLayout>
</ScrollView>