<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResturentActivity"
    android:background="@drawable/resturant">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OUR MENU"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="130dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textSize="30dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tasty and Yummy"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="120dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breakfast"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="19dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textSize="30dp"
            android:textColor="#000000"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignStart="@+id/b1"
            android:layout_alignLeft="@+id/b1"
            android:layout_alignTop="@+id/b1"
            android:layout_alignEnd="@+id/b1"
            android:layout_alignRight="@+id/b1"
            android:layout_alignBottom="@+id/b1"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/b1" />

        <Button
            android:id="@+id/b1"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:gravity="bottom|center_horizontal"
            android:paddingBottom="10dp"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/menu"
            />

        <TextView
            android:id="@+id/b11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sandwich with tea"
            android:layout_marginTop="360dp"
            android:layout_marginLeft="30dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20dp"
            android:textColor="#000000" />

    </RelativeLayout>

</ScrollView>